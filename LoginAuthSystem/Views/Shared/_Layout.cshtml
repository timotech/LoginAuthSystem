<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | Login Auth System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <header id="header">
        <div class="container">
            <div class="row">
                <div class="col-md-7">
                    <div class="headerimg_wrap">
                        <img src="~/Images/altara_logo.png" width="138" height="110" />
                    </div>
                    <div class="headertext_wrap">
                        <div>
                            <h1 class="banner_wrap"><strong>Login Authentication System</strong></h1>
                            <h2 class="fixhs">Altara - Making Lifes Better</h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-5">
                    <ul class="side_header_side">
                        @*<li>@Html.ActionLink("Home", "Index", "Home", new { @class= "global-icon" })</li>*@
                        <li>
                            <a href="@Url.Action("Products", "Home")" class="global-icon">
                                <span class="glyphicon glyphicon-book icon" aria-hidden="true"></span>
                                <span class="text">Products</span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Catalogs", "Home")" class="global-icon">
                                <span class="glyphicon glyphicon-align-justify icon" aria-hidden="true"></span>
                                <span class="text">Catalogs</span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("FAQ", "Home")" class="global-icon">
                                <span class="glyphicon glyphicon-fire icon" aria-hidden="true"></span>
                                <span class="text">FAQ</span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Shop", "Home")" class="global-icon">
                                <span class="glyphicon glyphicon-blackboard icon" aria-hidden="true"></span>
                                <span class="text">Shop</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>
    <div class="navbar navbar-default" data-spy="affix" data-offset-top="103">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About Us", "About", "Home")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Posts And Events <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("ViewPost", "Home")">View Posts</a></li>                         
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Login Auth System</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
